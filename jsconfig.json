{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "mapRoot": "./src",
    "rootDir": "./src",
    "sourceRoot": "./src",
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "validate": false
      }
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "tools",
    "stage",
    "coverage",
    ".nyc_output"
  ]
}
